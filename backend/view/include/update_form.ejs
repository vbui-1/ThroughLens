<form id="update_form" method="PUT">
  <fieldset>
    <legend class="text-center">Update</legend>
    <p class="text-center">Use the form below to update your account</p>
    <div class="form-group">
      <label for="name" class="form-label mt-4">New Name</label>
      <input
        type="name"
        name="name"
        class="form-control"
        id="name"
        placeholder="<%= user.name %>"
      />
    </div>
    <div class="form-group">
      <label for="email" class="form-label mt-4">New Email</label>
      <input
        type="email"
        name="email"
        class="form-control"
        id="email"
        placeholder="<%= user.email %>"
      />
    </div>
    <div class="form-group">
      <label for="password" class="form-label mt-4">New Password</label>
      <input
        type="password"
        name="password"
        class="form-control"
        id="password"
        placeholder="Type New Password"
      />
    </div>
    <!--<input type="submit" value="Signup" />-->
    <button type="submit" class="btn btn-primary">Submit</button>
  </fieldset>
</form>